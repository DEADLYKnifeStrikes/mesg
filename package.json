{
  "name": "mesg-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=packages/api\" \"npm run dev --workspace=packages/web\"",
    "build": "npm run build --workspace=packages/api && npm run build --workspace=packages/web",
    "start:api": "npm run start:prod --workspace=packages/api",
    "start:web": "npm run preview --workspace=packages/web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
